@model CreateRecordViewModel
<partial name="_NavbarPartial" model="@Context.Request.Path" />

<h1 class="display-2 text-center mt-5 fw-bold fst-italic text-secondary">Kelime Ekleme Sayfasına Hoş Geldiniz ! :)</h1>
<div class="container position-fixed top-50 start-50 translate-middle">

    <form asp-action="AddRecord" method="post" class="bg-secondary p-2 border-bottom border-dark">
        <div class="row py-2">
            <div class="col-2">
                <input type="date" class="form-control bg-secondary border-warning" asp-for="Date"  />
            </div>
        </div>
        @for (int i = 0; i < 4; i++)
        {
            <div class="row mb-2">
                <div class="col-2 ">
                    <input type="text" style="background-color:darkslategrey" class="form-control border-0 text-white fw-bold" placeholder="Sözcük ismi..." asp-for="WordNames[i]" />
                </div>
                <div class="offset-1 col">
                    <input type="text" style="background-color:darkslategrey" class="form-control border-0 text-white" placeholder="Sözcük Tanımı..." asp-for="WordDefs[i]" />
                </div>
                <div class="col-2 offset-1">
                    <input type="text" style="background-color:darkslategrey" class="form-control border-0 text-white" placeholder="Sözcük Türü..." asp-for="WordTypes[i]">
                </div>
            </div>
        }
        <div class="text-center"><button class="btn mt-2 fw-normal text-black px-4" style="background-color:#8F00FF">Ekle</button></div>
    </form>
</div>
<div class="container mt-5 text-warning mt-5">
    <vc:deneme />
</div>        