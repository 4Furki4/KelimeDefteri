@model List<Record>
<partial name="_NavbarPartial" model="@Context.Request.Path" />
<div class="container p-3 mt-5">
    <div class="bg-dark">
        @foreach (var Kayit in Model)
        {
            <div class="text-white fw-bold fs-4 p-3 border-bottom border-secondary">
                @Kayit.date.ToShortDateString()
                <ul class="list-group p-3 mb-5">
                    @foreach (var kelime in Kayit.Words)
                    {
                        <li class="list-group-item active mt-3" aria-current="true">@kelime.Name</li>
                        @foreach (var tanim in kelime.Definitions)
                        {
                            <li class="list-group-item d-inline-flex" style="background-color:antiquewhite">
                                <div class="col-2">@tanim.definitionType</div>
                                @tanim.definition
                            </li>
                        }
                    }
                </ul>
            </div>
        }
    </div>
</div>


