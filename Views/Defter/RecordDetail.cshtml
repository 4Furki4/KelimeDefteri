@model RecordDetailViewModel
<partial name="_NavbarPartial" model="Context.Request.Path" />
<div class="container p-3 mt-3">
    <div class="bg-dark">
        <div class="text-white fw-bold fs-4 p-3 border-bottom border-secondary">
            @Model.date.ToLongDateString()
            <ul class="list-group p-3 mb-3">
                @foreach (var kelime in Model.Words)
                {
                    <li class="list-group-item active mt-3" aria-current="true" style="background-color:#901aff; border-color:#901aff">
                        @kelime.Name
                        <a role="button" asp-action="Update" asp-route-id="@kelime.Id" class="btn btn-outline-warning px-5 float-end">GÜNCELLE</a>
                     </li>
                    @foreach (var tanim in kelime.Definitions)
                    {
                        <li class="list-group-item d-inline-flex" style="background-color:antiquewhite">
                            <div class="col-2">@tanim.definitionType</div>
                            @tanim.definition
                        </li>
                    }
                }
            </ul>
            <div class="row text-center">
                <div>
                    @*DELETES CURRENT RECORD AND REDIRECTS TO HOMEPAGE*@
                    <a role="button" asp-action="Delete" asp-route-id="@Model.Id" asp-route-returnAction="Homepage" class="btn btn-lg btn-outline-danger px-5">SİL</a>
                </div>
            </div>
        </div>
    </div>
</div>