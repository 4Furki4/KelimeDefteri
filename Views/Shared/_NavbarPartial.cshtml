<script src="~/jquery/jquery.min.js"></script>
<script>
    $("document").ready(function(){

        $("#mainNavbar").hide().slideDown(1000);

    })


</script>

@model PathString
<nav id="mainNavbar" class="navbar sticky-top navbar-expand-lg d-block text-white navbar-customs custom-text-white">
    <span id="navbarHeader" class="navbar-brand mb-0 h1 d-sm-inline-block offset-4 offset-sm-1 col-sm-3 col-md-3 offset-md-1 offset-lg-1 ms-lg-2 col-lg-2 col-xl-1">Kelime Defteri</span>
    
    @if (Model != "/Defter/Homepage" && Model != "/")
    {
        <a
            class="navbar-brand text-white
            d-none
            px-sm-5
            px-xl-5
            d-sm-inline-block
            col-sm-3 col-md-3 col-lg-2 col-xl-1"
       asp-action="Homepage" asp-controller="Defter">
            <span class="navText">Ana Sayfa</span>
        </a>
    }
    @if (Model != "/Defter/AllRecord")
    {
        <a
            id="recordNav"
            class="navbar-brand text-white
            d-none
            d-sm-inline-block
            col-sm-3 col-md-3 col-lg-2 col-xl-1 px-3"
            asp-action="AllRecord" asp-controller="Defter">
            <span class="navText">Tüm Kelimeler</span>
        </a>
    }
    @if (Model != "/Defter/AddRecord")
    {
        <a
            class="navbar-brand text-white
            d-none
            d-lg-inline-block
            col-sm-3
            col-md-3 col-lg-3 col-xl-1 px-4"
            asp-action="AddRecord" asp-controller="Defter">
            <span class="navText">Kelime Ekle</span>
        </a>
    }
    @if (!Model.ToString().Contains("/Defter/RecordDetail"))
    {

    }
</nav>